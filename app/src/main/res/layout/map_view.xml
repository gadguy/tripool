<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView"
        android:layout_marginTop="77dp"
        android:text="From"
        android:textSize="18sp" />
    <TextView
        android:id="@+id/textView"
        android:layout_width="58dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="120dp"
        android:layout_toStartOf="@+id/editTextFrom"
        android:text="To"
        android:textSize="18sp" />


    <EditText
        android:id="@+id/editTextFrom"
        android:layout_width="204dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignStart="@+id/editTextTo"
        android:ems="10"
        android:text="어디로 가시나요?"
        android:textSize="14sp"
        android:focusable="false"
        android:onClick="btnLayerFrom"/>
    <EditText
        android:id="@+id/editTextTo"
        android:layout_width="204dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="63dp"
        android:ems="10"
        android:text="어디에서 타시나요?"
        android:textSize="14sp"
        android:focusable="false"
        android:onClick="btnLayerTo"/>



    <RelativeLayout
        android:id="@+id/map_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="160dp"
        android:layout_marginBottom="0dp"></RelativeLayout>

    <Button
        android:id="@+id/btn_search"
        android:layout_width="365dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="btnSearch"
        android:text="검색" />


</RelativeLayout>
